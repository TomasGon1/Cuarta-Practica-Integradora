<h1>Bienvenido al panel de Usuario Premium</h1>

<h2>Agregar Key de Steam</h2>
<form id="productForm">
  <label for="title">Título:</label>
  <input type="text" id="title" name="title" required />

  <label for="description">Descripción:</label>
  <textarea id="description" name="description" required></textarea>

  <label for="price">Precio:</label>
  <input type="number" id="price" name="price" required />

  <label for="img">Imagen:</label>
  <input type="text" id="img" name="img" placeholder="URL de la imagen" />

  <label for="code">Código:</label>
  <input type="text" id="code" name="code" required />

  <label for="stock">Stock:</label>
  <input type="number" id="stock" name="stock" required />

  <label for="category">Categoría:</label>
  <input type="text" id="category" name="category" required />

  <label for="status">Estado:</label>
  <select id="status" class="select-style" name="status">
    <option value="true">Activo</option>
    <option value="false">Inactivo</option>
  </select>

  <button type="submit" class="own-btn">Agregar Producto</button>
</form>

<h2>Tus Keys</h2>
<ul id="userProductsList">
    {{#each userProducts}}
    <li>
        <h3>{{this.title}}</h3>
        <p>{{this.description}}</p>
        <p>Precio: ${{this.price}}</p>
        <form class="deleteForm" data-product-id="{{this._id}}">
            <button type="button" class="own-btn delete">Eliminar</button>
        </form>
    </li>
    {{/each}}
</ul>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.0/socket.io.js"></script>
<script src="js/panelPremium.js"></script>