<h1> Productos </h1>

<div class="card-container">
  {{#each products}}
    <div class="card-products">
      <h2>{{title}}</h2>
      <p>{{description}}</p>
      <p>Precio: ${{price}}</p>
      <p>Categoria: {{category}} </p>
      <p>Subido por: {{owner}}</p>
      <button class="own-btn"> Agregar al Carrito </button>
    </div>
  {{/each}}
</div>

<div class="page-container">
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}"><button
        class="own-btn"
      >Ant</button></a>
  {{/if}}

  <div class="pages">
    <p>Pagina {{currentPage}} de {{totalPages}} </p>
  </div>

  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}"><button class="own-btn">
        Sig</button></a>
  {{/if}}
</div>